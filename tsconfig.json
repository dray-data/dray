{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": [
        "**/*.d.ts",
        "./node_modules/**/*.*"
    ],
    "filesGlob": [
        "./proof-of-concept/**/*.ts",
        "./test/**/*.ts",
        "./typings/index.d.ts"
    ],
    "files": [
        "./proof-of-concept/db-column.ts",
        "./proof-of-concept/db-table.ts",
        "./proof-of-concept/dray-test.ts",
        "./proof-of-concept/repository.ts",
        "./proof-of-concept/squirrel-model.ts",
        "./test/unit-tests/decorators/db-column.spec.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
